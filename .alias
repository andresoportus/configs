#!/bin/bash

# Git
alias g='git status '
alias ga='git add '
alias gb='git branch '
alias gc='git commit'
alias gd='git diff --staged'
alias get='git '
alias gf='git diff'
alias gg='git grep -n '
alias gh='git log --tags --pretty="%h %d %s" --decorate=full'
alias gk='gitk --all&'
alias glh='git log --pretty=format:"%h %s" -10'
alias gl='git log --name-only'
alias gll='git log --pretty=format:"%h %ad %s%d" --date=short'
alias glll='git log --pretty=format:"%h %cd %ad [%an] %s%d" --date=short'
alias gllll='git log --pretty=format:"%h %ad %cd | %s%d [%an]" --graph --date=short --all'
alias gllll='git log --pretty=format:"%h %ad %cd | %s%d [%an]" --graph --date=short --all'
alias go='git checkout '
alias got='git '
alias gp='git cherry-pick'
alias gpc='git cherry-pick --continue'
alias gpx='git cherry-pick -x'
alias gr='git remote -v'
alias grep='grep --color=auto'
alias gs='git show '
alias gt='git log --tags --show-notes --simplify-by-decoration --pretty="format:%ai %d %s"'
alias gx='gitx --all'
alias gm='git commit --amend --no-edit'
alias g1='git log -p -1'

# Others
alias ..='cd ..'
alias ...='cd ../..'
alias c='clear'
alias e='emacs -nw --load ~/src/configs/.emacs'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias l='ls -lrt'
alias la='ls -A'
alias ll='ls -alFS'
alias ls='ls --color=auto'
alias t='find . -not -path '*build*' -not -path '*prebuilt*' -regex ".*\.\(cc\|cpp\|hpp\|h\|c\)" | xargs etags'
alias tz='find kernel system -regex ".*\.\(cc\|cpp\|hpp\|h\|c\)" | xargs etags'
alias s='grep -rIn --color=always'
alias less='less -R'
alias f='find . -type f -name '
alias r='find . -type f -regex ".*\.\(cc\|cpp\|hpp\|h\|c\)" | xargs sed -i "s/${1}/${2}/g"'
alias m='tmux -f ~/src/configs/.tmux.conf attach -d'
alias mm='tmx2 -f ~/src/configs/.tmux.conf attach -d'

